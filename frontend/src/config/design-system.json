{
  "designSystem": {
    "name": "PolicyWise Quote Engine",
    "version": "1.0.0",
    "description": "Elegant, minimal design system for quote engine",

    "colors": {
      "primary": {
        "50": "#faf5f0",
        "100": "#f5ebe1",
        "200": "#e8d4c0",
        "300": "#d9ba9b",
        "400": "#c99d76",
        "500": "#b8865f",
        "600": "#a67353",
        "700": "#8a5e47",
        "800": "#6f4d3d",
        "900": "#5a3f32"
      },
      "neutral": {
        "50": "#fafafa",
        "100": "#f5f5f5",
        "200": "#e5e5e5",
        "300": "#d4d4d4",
        "400": "#a3a3a3",
        "500": "#737373",
        "600": "#525252",
        "700": "#404040",
        "800": "#262626",
        "900": "#171717"
      },
      "background": {
        "primary": "#ffffff",
        "secondary": "#faf9f7",
        "tertiary": "#f5f3f0",
        "overlay": "rgba(0, 0, 0, 0.02)"
      },
      "text": {
        "primary": "#171717",
        "secondary": "#525252",
        "tertiary": "#737373",
        "inverse": "#ffffff"
      },
      "status": {
        "success": "#10b981",
        "warning": "#f59e0b",
        "error": "#ef4444",
        "info": "#3b82f6"
      },
      "accent": {
        "beige": "#d9ba9b",
        "taupe": "#b8a593",
        "cream": "#f5ebe1"
      }
    },

    "typography": {
      "fontFamilies": {
        "display": "'Cormorant Garamond', 'Playfair Display', Georgia, serif",
        "body": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "mono": "'Fira Code', 'Roboto Mono', monospace"
      },
      "fontSizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem",
        "6xl": "3.75rem",
        "7xl": "4.5rem"
      },
      "fontWeights": {
        "light": 300,
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeights": {
        "tight": 1.2,
        "normal": 1.5,
        "relaxed": 1.75,
        "loose": 2
      },
      "letterSpacing": {
        "tight": "-0.02em",
        "normal": "0",
        "wide": "0.02em",
        "wider": "0.05em",
        "widest": "0.1em"
      }
    },

    "spacing": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem",
      "32": "8rem"
    },

    "layout": {
      "maxWidth": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px",
        "container": "1400px"
      },
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      },
      "gridColumns": 12,
      "gutters": {
        "mobile": "1rem",
        "tablet": "2rem",
        "desktop": "3rem"
      }
    },

    "borderRadius": {
      "none": "0",
      "sm": "0.125rem",
      "base": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "2xl": "1rem",
      "full": "9999px"
    },

    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
      "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
      "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)"
    },

    "animations": {
      "duration": {
        "fast": "150ms",
        "base": "250ms",
        "slow": "350ms",
        "slower": "500ms"
      },
      "easing": {
        "linear": "linear",
        "in": "cubic-bezier(0.4, 0, 1, 1)",
        "out": "cubic-bezier(0, 0, 0.2, 1)",
        "inOut": "cubic-bezier(0.4, 0, 0.2, 1)",
        "elegant": "cubic-bezier(0.23, 1, 0.32, 1)"
      }
    }
  },

  "components": {
    "button": {
      "primary": {
        "background": "primary.600",
        "color": "text.inverse",
        "padding": "12px 32px",
        "borderRadius": "full",
        "fontSize": "sm",
        "fontWeight": "medium",
        "letterSpacing": "wide",
        "textTransform": "uppercase",
        "border": "1px solid transparent",
        "hover": {
          "background": "primary.700",
          "transform": "translateY(-1px)",
          "shadow": "md"
        },
        "active": {
          "transform": "translateY(0)"
        }
      },
      "secondary": {
        "background": "transparent",
        "color": "text.primary",
        "padding": "12px 32px",
        "borderRadius": "full",
        "fontSize": "sm",
        "fontWeight": "medium",
        "letterSpacing": "wide",
        "textTransform": "uppercase",
        "border": "1px solid neutral.300",
        "hover": {
          "borderColor": "neutral.400",
          "background": "background.tertiary"
        }
      },
      "ghost": {
        "background": "transparent",
        "color": "text.secondary",
        "padding": "8px 16px",
        "borderRadius": "md",
        "fontSize": "sm",
        "hover": {
          "background": "background.tertiary",
          "color": "text.primary"
        }
      }
    },

    "card": {
      "base": {
        "background": "background.primary",
        "borderRadius": "xl",
        "padding": "24px",
        "shadow": "sm",
        "border": "1px solid neutral.200",
        "hover": {
          "shadow": "md",
          "transform": "translateY(-2px)"
        }
      },
      "elevated": {
        "background": "background.primary",
        "borderRadius": "2xl",
        "padding": "32px",
        "shadow": "lg",
        "border": "none"
      },
      "flat": {
        "background": "background.secondary",
        "borderRadius": "lg",
        "padding": "20px",
        "shadow": "none",
        "border": "none"
      }
    },

    "input": {
      "base": {
        "background": "background.primary",
        "color": "text.primary",
        "padding": "12px 16px",
        "borderRadius": "md",
        "fontSize": "base",
        "border": "1px solid neutral.300",
        "focus": {
          "borderColor": "primary.500",
          "shadow": "0 0 0 3px rgba(184, 134, 95, 0.1)"
        }
      },
      "minimal": {
        "background": "transparent",
        "color": "text.primary",
        "padding": "8px 0",
        "borderRadius": "none",
        "fontSize": "base",
        "border": "none",
        "borderBottom": "1px solid neutral.300",
        "focus": {
          "borderBottomColor": "primary.500"
        }
      }
    },

    "navigation": {
      "header": {
        "background": "rgba(255, 255, 255, 0.9)",
        "backdropFilter": "blur(10px)",
        "height": "80px",
        "padding": "0 32px",
        "borderBottom": "1px solid neutral.200"
      },
      "link": {
        "color": "text.secondary",
        "fontSize": "sm",
        "fontWeight": "medium",
        "letterSpacing": "wide",
        "textTransform": "uppercase",
        "hover": {
          "color": "text.primary"
        },
        "active": {
          "color": "primary.600"
        }
      }
    },

    "dashboard": {
      "container": {
        "background": "background.secondary",
        "padding": "32px",
        "minHeight": "100vh"
      },
      "widget": {
        "background": "background.primary",
        "borderRadius": "xl",
        "padding": "24px",
        "shadow": "sm",
        "border": "1px solid neutral.200"
      },
      "stat": {
        "label": {
          "color": "text.tertiary",
          "fontSize": "sm",
          "fontWeight": "medium",
          "letterSpacing": "wide",
          "textTransform": "uppercase"
        },
        "value": {
          "color": "text.primary",
          "fontSize": "4xl",
          "fontWeight": "light",
          "fontFamily": "display"
        }
      }
    },

    "modal": {
      "overlay": {
        "background": "rgba(0, 0, 0, 0.3)",
        "backdropFilter": "blur(4px)"
      },
      "content": {
        "background": "background.primary",
        "borderRadius": "2xl",
        "padding": "40px",
        "shadow": "2xl",
        "maxWidth": "600px"
      }
    },

    "toast": {
      "success": {
        "background": "status.success",
        "color": "text.inverse",
        "borderRadius": "lg",
        "padding": "16px 20px",
        "shadow": "lg"
      },
      "error": {
        "background": "status.error",
        "color": "text.inverse",
        "borderRadius": "lg",
        "padding": "16px 20px",
        "shadow": "lg"
      },
      "info": {
        "background": "background.primary",
        "color": "text.primary",
        "borderRadius": "lg",
        "padding": "16px 20px",
        "shadow": "lg",
        "border": "1px solid neutral.300"
      }
    }
  },

  "styleGuide": {
    "principles": [
      "Embrace minimalism and whitespace",
      "Prioritize readability and clarity",
      "Use subtle animations for elegance",
      "Maintain consistent spacing rhythm",
      "Balance form and function"
    ],
    "imagery": {
      "style": "Clean, bright, natural lighting",
      "treatment": "Soft shadows, neutral tones",
      "aspectRatios": ["16:9", "4:3", "1:1", "3:4"]
    },
    "voiceAndTone": {
      "brand": "Professional yet approachable",
      "technical": "Clear and precise",
      "help": "Supportive and educational"
    }
  }
}